<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">
    <% if !current_user %>
      <li class="nav-item">
        <%= link_to "Log in",  new_session_path, class:"nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign up",  new_user_path, class:"nav-link"  %>
      </li>
    <% else %>
      <li class="nav-item">
                <%= link_to "Events", user_path(current_user.id) , class:"nav-link" %>
      </li>
      <li class ="nav-item">
        <%= link_to "Create Event", new_event_path , class:"nav-link" %>
      </li>
      <li class ="nav-item">
        <%= link_to "Create Venue",  new_venue_path , class:"nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Log out",  logout_path, method: "delete", class:"nav-link"  %>
      </li>
    <% end %>
    </ul>
  </nav>
<br>
<br>
  <% if flash.any? %>
  <% flash.each do |key, value| %>
  <div class="alert <%= flash_class_name(key) %>"> <%= value %></div>
  <% end %>
  <% end %>

<div class="container">
<%= yield %>
</div>

</body>
</html>
